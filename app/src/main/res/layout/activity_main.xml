<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Burger Menu Icon -->
                <ImageView
                    android:id="@+id/burgerIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Menu" />

            </LinearLayout>

            <!-- Location Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/current_location"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_location"
                        android:tint="@android:color/black"
                        android:contentDescription="Location icon" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Select Location"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nats_regular" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nats_regular"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="Monday, April 7" />

            <!-- Weather Icon + Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@drawable/circle_bg"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/weather_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="60dp"
                            android:src="@drawable/ic_cloudy"
                            android:contentDescription="Weather condition" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_temp_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nats_regular"
                                android:textStyle="bold"
                                android:text="--°C"
                                android:textSize="38sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_temp_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nats_regular"
                                android:textStyle="bold"
                                android:text="--°F"
                                android:textSize="38sp"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Sunrise & Sunset -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Sunrise Block -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sunrise"
                        android:contentDescription="Sunrise" />

                    <TextView
                        android:id="@+id/tv_sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nats_regular"
                        android:text="--:--"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Sunset Block -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sunset"
                        android:contentDescription="Sunset" />

                    <TextView
                        android:id="@+id/tv_sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="--:--"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nats_regular" />
                </LinearLayout>
            </LinearLayout>

            <!-- Extra Info -->
            <TextView
                android:id="@+id/tv_extra"
                android:background="@drawable/forecast_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Humidity: --%   Wind: -- mph"
                android:textSize="16sp" />

            <!-- 5-Day Forecast Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/forecast_card"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="5">

                <!-- Day 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forecast_day_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/forecast_icon_1"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_sunny"
                        android:contentDescription="Forecast condition" />

                    <TextView
                        android:id="@+id/forecast_temp_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--°"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Day 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forecast_day_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/forecast_icon_2"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_cloudy"
                        android:contentDescription="Forecast condition" />

                    <TextView
                        android:id="@+id/forecast_temp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--°"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!-- Day 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forecast_day_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/forecast_icon_3"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_rainy"
                        android:contentDescription="Forecast condition" />

                    <TextView
                        android:id="@+id/forecast_temp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--°"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Day 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forecast_day_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/forecast_icon_4"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_storm"
                        android:contentDescription="Forecast condition" />

                    <TextView
                        android:id="@+id/forecast_temp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--°"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Day 5 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/forecast_day_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/forecast_icon_5"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_sunny"
                        android:contentDescription="Forecast condition" />

                    <TextView
                        android:id="@+id/forecast_temp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--°"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout> <!-- End of 5-Day Forecast -->

        </LinearLayout> <!-- End of Main Content LinearLayout -->
    </ScrollView>
</LinearLayout>